<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<!--- Este Suite es para crear una seccion con el nombre que usted desee, 
	y esa carpeta se crea en test-output -->
<suite name="LoginXMLFile">
	<!--- aqui se le agrega el nombre del Test, el que quiera -->
	<test name="TestWithChrome">
		<parameter name="browser" value="chrome" />
		<parameter name="baseURL" value="http://qa-trainingw7:86/" />
		<parameter name="executionType" value="local"/>
		<classes>
			<!--- aqui se le agrega el nombre de la clase, tiene que ser igual al 
				nombre de la clase, ejemplo Login o Register -->
			<class name="Tests.HomePageTest" />
			<class name="Tests.LoginTest" />
			<class name="Tests.RegisterTest" />
			<class name="Tests.MyAdsAndProfileTest" />
			<class name="Tests.PostAnAdTest" />
			<class name="Tests.CategoriesTest" />
		</classes>
	</test>
	<test name="TestWithFirefox">
		<parameter name="browser" value="firefox" />
		<parameter name="baseURL" value="http://qa-trainingw7:86/" />
		<parameter name="executionType" value="local"/>
		<classes>
			<!--- aqui se le agrega el nombre de la clase, tiene que ser igual al 
				nombre de la clase, ejemplo Login o Register -->
			<class name="Tests.HomePageTest" />
			<class name="Tests.LoginTest" />
			<class name="Tests.RegisterTest" />
			<class name="Tests.MyAdsAndProfileTest" />
			<class name="Tests.PostAnAdTest" />
			<class name="Tests.CategoriesTest" />
		</classes>
	</test>
</suite>